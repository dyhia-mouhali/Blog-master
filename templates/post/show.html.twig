{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}

    <div class="id" style="margin-bottom:70px; " >
        <div style="height:350px;  background-size: cover; margin-bottom: 0px; overflow: hidden ">
            <img src="{{ asset("ressources/ourBlog.jpg") }}"  alt="blog" style="width: 100%"/>
        </div>
        <div id="menu" style="background-color: #333;margin-top:0px;  position: sticky; top: 0; overflow: hidden; opacity: 0.8;">
            <ul style=" display : inline-flex; list-style-type: none; margin: 0; padding: 0; background-color: #333;list-style-type: none;padding-top: 15px">
           <li> <a style="color: cornsilk;padding-left: 10px; text-shadow: 0 0 10px rgba(0,0,0,0.3); margin-right: 25px" href="{{ path('post_index') }}">back to list</a></li>
           <li> <a style="color: cornsilk; text-shadow: 0 0 10px rgba(0,0,0,0.3); " href="{{ path('post_edit', {'id': post.id}) }}">edit</a></li>
           <li style="float: right;margin-left: 1300px; background-color: crimson">{{ include('post/_delete_form.html.twig') }} </li>
            </ul>
        </div>
    </div>


    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Url_alias</th>
                <td>{{ post.urlAlias }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ post.published ? post.published|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>

        </tbody>
    </table>


{% endblock %}
